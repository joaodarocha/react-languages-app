{
    "extends": ["eslint:recommended", "prettier", ],
    "plugins": ["react", "import", "jest"],
    "parserOptions": {
        "ecmaVersion": 8,
        "impliedStrict": true,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true
    },
    "globals": {
        "describe": true,
        "it": true,
        "before": true,
        "beforeEach": true,
        "after": true,
        "afterEach": true
    },
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-unused-expressions": "off",
        "strict": "off",
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "semi": [2, "always"],
        "quotes": [2, "single", "avoid-escape"],
        "eqeqeq": [2, "smart"],
        "brace-style": [2, "1tbs"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "space-before-blocks": [1, "always"],
        "no-console": "off",
        "key-spacing": [2, {
            "beforeColon": false,
            "afterColon": true,
            "mode": "minimum"
        }],
        "new-cap": [2, {
            "properties": false
        }]
    }
    
}
